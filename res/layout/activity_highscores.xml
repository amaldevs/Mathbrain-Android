<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HighscoresActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/appNameActivity" />

        <TextView
            android:id="@+id/headMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/title_activity_highscores"
            android:textSize="@dimen/text30" />

        <TableLayout
            android:id="@+id/TableLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="@dimen/highscoresPadding"
            android:paddingTop="@dimen/highscoresPadding" >

            <TableRow
                android:id="@+id/TableRow1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="@string/h1"
                    android:layout_weight="1"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/first"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:maxLength="30"
                    android:text="@string/hello_world"
                    android:layout_weight="5"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/firstscore"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="@string/n0"
                    android:layout_weight="2"
                    android:textSize="@dimen/hsSize" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="@string/h2"
                    android:layout_weight="1"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/second"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="@string/hello_world"
                    android:layout_weight="5"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/secondscore"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="@string/n0"
                    android:layout_weight="2"
                    android:textSize="@dimen/hsSize" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="@string/h3"
                    android:layout_weight="1"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/third"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="@string/hello_world"
                    android:layout_weight="5"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/thirdscore"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="@string/n0"
                    android:layout_weight="2"
                    android:textSize="@dimen/hsSize" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="@string/h4"
                    android:layout_weight="1"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/fourth"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="@string/hello_world"
                    android:layout_weight="5"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/fourthscore"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="@string/n0"
                    android:layout_weight="2"
                    android:textSize="@dimen/hsSize" />
            </TableRow>

            <TableRow
                android:id="@+id/TableRow5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:text="@string/h5"
                    android:layout_weight="1"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/fifth"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:text="@string/hello_world"
                    android:layout_weight="5"
                    android:textSize="@dimen/hsSize" />

                <TextView
                    android:id="@+id/fifthscore"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:text="@string/n0"
                    android:layout_weight="2"
                    android:textSize="@dimen/hsSize" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <Button
                android:id="@+id/buttonPlay"
                android:layout_width="@dimen/buttonSize"
                android:layout_height="@dimen/buttonSize"
                android:background="@drawable/play"
                android:onClick="play_click" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/adlayout" 
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
	    android:gravity="center|bottom" 
	    android:orientation="vertical">
    </LinearLayout>

</LinearLayout>
